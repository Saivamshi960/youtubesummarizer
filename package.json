{
  "name": "youtube-summarizer",
  "version": "2.0.0",
  "description": "Intelligent YouTube video summarizer with AI-powered transcript extraction and summarization",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "dev": "ts-node --watch src/index.ts",
    "manual-helper": "ts-node src/manual-transcript-helper.ts",
    "list-outputs": "ts-node src/list-outputs.ts",
    "clean": "rimraf dist",
    "test": "echo \"Tests coming soon...\"",
    "setup": "npm install && npm run create-dirs",
    "create-dirs": "node -e \"const fs=require('fs'); ['outputs','outputs/transcripts','outputs/summaries','outputs/reports','outputs/samples','transcripts'].forEach(d=>fs.mkdirSync(d,{recursive:true})); console.log('âœ… Directories created')\""
  },
  "keywords": [
    "youtube",
    "transcript",
    "summarization",
    "ai",
    "gemini",
    "deepgram",
    "openai",
    "whisper",
    "automation"
  ],
  "author": "YouTube Summarizer",
  "license": "MIT",
  "dependencies": {
    "@deepgram/sdk": "^3.4.0",
    "@distube/ytdl-core": "^4.13.4",
    "@google/generative-ai": "^0.7.1",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "openai": "^4.28.4",
    "youtube-captions-scraper": "^2.0.3",
    "ytdl-core": "^4.11.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/youtube-summarizer.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/youtube-summarizer/issues"
  },
  "homepage": "https://github.com/your-username/youtube-summarizer#readme"
}
